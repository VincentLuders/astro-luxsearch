---
import Layout from '../components/Layout.astro';
---

<Layout title="Application Submitted" currentPage="opportunities">
    <div class="container">
        <div class="success-page-content">
            <div class="card card-tall text-center">
                <div class="success-icon">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <path d="m9 12 2 2 4-4"></path>
                    </svg>
                </div>
                
                <h1 class="title">âœ… Application Submitted Successfully!</h1>
                
                <div class="body-text">
                    <p>Thank you for your interest in joining our team. We have received your application and CV.</p>
                    <p>Our team will review your application and get back to you within <strong>2-3 business days</strong>.</p>
                    <p>We appreciate your patience and look forward to potentially working with you.</p>
                </div>
                
                <div class="success-actions">
                    <a href="/opportunities" class="btn btn-primary">Browse More Jobs</a>
                    <a href="/" class="btn btn-secondary">Back to Home</a>
                </div>
                
                <div class="contact-info">
                    <p class="small-text">
                        Questions? Contact us directly at 
                        <a href="mailto:vincent@luxsearch.eu" class="privacy-link">vincent@luxsearch.eu</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .success-page-content {
        padding: 80px 0;
        min-height: 60vh;
        display: flex;
        align-items: center;
    }
    
    .success-icon {
        margin: 0 auto 30px;
        color: #10b981;
    }
    
    .success-icon svg {
        width: 64px;
        height: 64px;
    }
    
    .title {
        margin-bottom: 30px;
        color: #1c1c1c;
    }
    
    .body-text {
        margin-bottom: 40px;
        line-height: 1.7;
    }
    
    .body-text p {
        margin-bottom: 16px;
    }
    
    .success-actions {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #5551ff, #9089fc);
        color: white;
        border: none;
    }
    
    .btn-secondary {
        background: transparent;
        color: #5551ff;
        border: 1px solid #5551ff;
    }
    
    .btn-secondary:hover {
        background: #5551ff;
        color: white;
    }
    
    .contact-info {
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
    }
    
    .text-center {
        text-align: center;
    }
    
    @media (max-width: 768px) {
        .success-actions {
            flex-direction: column;
            align-items: center;
        }
        
        .btn {
            width: 100%;
            max-width: 200px;
        }
    }
</style> 