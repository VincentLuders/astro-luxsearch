---
import Layout from '../components/Layout.astro';
---

<Layout title="Application Submitted">
    <div class="container">
        <div class="card card-tall text-center">
            <div style="font-size: 4rem; margin-bottom: 1rem;">✅</div>
            <h2 class="title">Application Submitted Successfully!</h2>
            <p class="body-text">
                Thank you for your application. We've received your CV and will review it within 2-3 business days.
            </p>
            <p class="body-text" style="margin-top: 1rem;">
                You'll receive a confirmation email at the address you provided shortly.
            </p>
            <div style="margin-top: 2rem;">
                <a href="/opportunities" class="btn">← Back to Job Opportunities</a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .text-center {
        text-align: center;
    }
    
    .container {
        padding: 2rem 1rem;
        max-width: 600px;
        margin: 0 auto;
    }
</style> 