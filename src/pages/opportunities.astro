    <!-- Job Description Data -->
    <script type="application/json" id="jobDescriptions">
    {
        "fullstack-ai-developer": {
            "title": "Full Stack AI Developer",
            "tags": ["German", "AI", "TypeScript"],
            "salary": "80k - 90k EUR",
            "location": "Luxembourg City",
            "description": {
