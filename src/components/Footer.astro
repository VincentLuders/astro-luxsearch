---
// Footer component with legal links
export interface Props {
    id?: string;
}

const { id } = Astro.props;
---

<footer class="footer" {...(id && { id })}>
    <div class="footer-container">
        <div class="footer-links">
            <a href="/privacy-policy" class="footer-link nav-link">Privacy Policy</a>
            <span class="footer-divider">|</span>
            <a href="/terms-of-use" class="footer-link nav-link">Terms of Use</a>
            <span class="footer-divider">|</span>
            <a href="/legal-notice" class="footer-link nav-link">Impressum / Legal Notice</a>
        </div>
    </div>
</footer> 